@model OnlineEventManagementSystem.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true);
    <h2 style="text-align:center">SignIn</h2>
    <table cellpadding="10" align="center">
        <tr>
            <td>
                @Html.LabelFor(Model => Model.UserMailId)
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.UserMailId, new { @maxlength = "64" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(Model => Model.Password)
            </td>
            <td>
                @Html.PasswordFor(Model => Model.Password, new { @maxlength = "15" })
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Login" />
            </td>
        </tr>
    </table>

}
