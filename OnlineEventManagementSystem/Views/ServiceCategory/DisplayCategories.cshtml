
@{
    ViewBag.Title = "DisplayCategories";
}

<table border="1" align="center">
    <tr>
        <th>Category ID</th>
        <th>Category Name</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (OnlineEventManagementSystem.Entity.ServiceCategory item in ViewBag.Categories)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>
                @Html.ActionLink("Update", "UpdateCategory", new { id = item.CategoryID })
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryID })
            </td>
        </tr>
    }
</table>
