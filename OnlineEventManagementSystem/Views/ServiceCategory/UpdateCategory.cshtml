@model OnlineEventManagementSystem.Models.ServiceCategoryModel

@{
    ViewBag.Title = "UpdateCategory";
}

@if (TempData["Message"] != null)
{
    @Html.Label((string)TempData["Message"])
    @Html.ActionLink("Display category", "DisplayCategory")
}
@using (Html.BeginForm("UpdateCategory", "ServiceCategory", FormMethod.Post))
{
    @Html.HiddenFor(Model => Model.CategoryId)
    <table cellpadding="10" align="center">
        <tr>
            <td>
                @Html.LabelFor(Model => Model.CategoryName)
            </td>
            <td>
                @Html.EditorFor(Model => Model.CategoryName)
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Cancel", "DisplayCategories", "ServiceCategory")
            </td>
            <td>
                <input type="submit" value="Update" />
            </td>
        </tr>
    </table>

}

