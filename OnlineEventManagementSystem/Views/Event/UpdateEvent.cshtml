@model OnlineEventManagementSystem.Models.EventModel

@{
    ViewBag.Title = "UpdateEvent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["Message"] != null)
{
    @Html.Label((string)TempData["Message"])
    @Html.ActionLink("Display events", "DisplayEvents")
}
@using (Html.BeginForm("UpdateEvent", "Event", FormMethod.Post))
{
    @Html.HiddenFor(Model => Model.EventId)
    <table cellpadding="10" align="center">
        <tr>
            <td>
                @Html.LabelFor(Model => Model.EventName)
            </td>
            <td>
                @Html.EditorFor(Model => Model.EventName)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(Model => Model.EventType)
            </td>
            <td>
                @Html.RadioButtonFor(Model => Model.EventType, "Personal")Personal
                @Html.RadioButtonFor(Model => Model.EventType, "Corporate")Corporate
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Cancel", "DisplayEvents", "Event")
            </td>
            <td>
                <input type="submit" value="Update" />
            </td>
        </tr>
    </table>
    
}



